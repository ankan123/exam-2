<p id="notice"><%= notice %></p>

<h1>Allocated orders for employees</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>Issue date</th>
      <th>Return date date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.employee.name %></td>
        <td><%= issue.item.name %></td>
        <td><%= issue.quantity %></td>
        <td><%= issue.issue_date %></td>
        <td><%= issue.return_date %></td>
        <td><%= link_to 'Show', issue,:class => 'btn btn-success btn-sm' %>
        <%= link_to 'Cancel/return', issue, method: :delete,:class => 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <h6 class="text-center">Check to see if there is quantity available for the particluar item to allocate an employee</h6>
  <%= render 'check_stock' %>
<%else%>
  <h5>Log-in to allocate orders to employees</h5>
  <%= link_to 'Sign In', new_user_session_path, :class => 'btn btn-success btn-sm' %>
<%end%>
