

<div class="card form-card">
<div class="card-body">
  <p id="notice"><%= notice %></p>

    <h4>Employee details</h4>
    <p>
      <strong>Name:</strong>
      <%= @employee.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @employee.email %>
    </p>

    <p>
      <strong>Status:</strong>
      <% if @employee.status %>
      Active
      <%else%>
      Inactive
      <%end%>
    </p>

    <%= link_to 'Edit', edit_employee_path(@employee), :class => 'btn btn-primary btn-sm' %> 
    <%= link_to 'Back', employees_path, :class => 'btn btn-danger btn-sm' %>

</div>
</div>