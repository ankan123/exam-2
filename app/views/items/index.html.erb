<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Quantity</th>
      <th>Status</th>
      <th>Notes</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.brand.name %></td>
        <td><%= item.category.name %></td>
        <td><%= item.quantity %></td>
        <td>
           <% if item.status %>
            Working 
          <%else%>
            Not-working 
          <%end%>
        </td>
        <td><%= item.notes[1..10]... %></td>
        <td><%= link_to 'Show', item %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, :class => "btn btn-primary" %>
